        <tr>
            <td>Nombre</td>
            <td>Cerrado</td>
            <td>Fecha Pedido</td>
        </tr>
        <tbody>
        {% for p in pedidos %}
        <tr>
            <td>{{ p.nombre }}</td>
            <td>{{ p.cerrado ? 'SÃ­' : 'No'}}</td>
            <td>{{ p.fechaPedido | date('d/m/Y')}}</td>
