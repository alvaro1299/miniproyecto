{% extends 'base.html.twig' %}
{% block title %} Productos {% endblock title %}
{% block body %}
    <h1>Listado de Productos</h1>
    <div class="tabla">
    <table border="1px" class="table table=hover table=striped table=bordered table=sm w=50" id="workers">
        <tr>
            <td>ID</td>
            <td>Nombre</td>
            <td>Precio</td>
            <td>Marca</td>
            <td>Categorias</td>
            <td>Editar</td>
            <td>Eliminar</td>
        </tr>
        <tbody>
        {% for p in productos %}
        <tr>
            <td>{{ p.id }}</td>
            <td>{{ p.nombre }}</td>
            <td>{{ p.precio }}</td>
            <td>{{ p.marca }}</td>
            <td>
            {% for c in p.categorias %}
                {{ p.categorias[c] }}
            {% endfor %}
            </td>
            <td><button><a href="{{ path('producto_modificar', {'id': p.id}) }}">Editar</a></button></td>
            <td><button><a href="{{ path('producto_eliminar', {'id': p.id}) }}"> Eliminar</a></button></td>

        </tr>
        {% else %}
        <tr>
            <td>No hay Productos.</td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
    <div>
        <button><a href="{{ path('producto_nuevo') }}">Producto Nuevo</a></button>
    </div>
    <div>
        <br>
        <td><a href="{{ path('clientes_listar') }}">LISTADO DE CLIENTES</a></td>
    </div>


{% endblock body %}